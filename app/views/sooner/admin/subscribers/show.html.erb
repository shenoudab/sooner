<div class="page-header">
	<h1>Subscriber</h1>
</div>
<div id="subscriber">
	<p id="notice">
		<%= notice %>
	</p>
	<div class="control-group">
		<b>Name:</b>
		<%= @subscriber.name %>
	</div>
	<div class="control-group">
		<b>Email:</b>
		<%= @subscriber.email %>
	</div>
	<div class="control-group">
		<b>Subscribed At:</b>
		<%= @subscriber.created_at.strftime("%d %b %Y %M:%H") %>
	</div>
</div>

<div class="form-actions">
	<%= link_to 'Edit', edit_admin_subscriber_path(@subscriber), :class => "btn" %>
	<%= link_to 'Back', admin_subscribers_path, :class => "btn" %>
</div>

